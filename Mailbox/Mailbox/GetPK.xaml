<Window x:Class="Mailbox.GetPK"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mailbox"
        mc:Ignorable="d"
        Title="GetPK" Height="300" Width="300">
    <Grid>
        <Button x:Name="SavePKButton" Click="SavePKButton_Click"  Content="Send my public key" Grid.Row="0"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="0,0,0,180"/>

        <TextBox x:Name="To"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="0,0,0,100" Text="Email"/>
        <TextBlock x:Name="PublicKeyBlock" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="Public Key" VerticalAlignment="Center" Height="153" Width="200" Margin="0,115,0,5"/>


    </Grid>
</Window>
