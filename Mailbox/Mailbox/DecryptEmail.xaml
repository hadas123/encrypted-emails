<Window x:Class="Mailbox.DecryptEmail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mailbox"
        mc:Ignorable="d"
        Title="DecryptEmail" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="3*" />
            <RowDefinition />
        </Grid.RowDefinitions>


        <ComboBox Name="address" SelectionChanged="address_SelectionChanged"  Grid.Row="1"   Margin="70,0,0,0" />
        <Label  Content="Mails:" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="38" RenderTransformOrigin="0.47,2.523" Grid.Row="1"/>

        <Button Click="Button_Click" Content="Dencrypt Email" Grid.Row="4"  HorizontalAlignment="Center" VerticalAlignment="Center"/>

       
    </Grid>
</Window>
